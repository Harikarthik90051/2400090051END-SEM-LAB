    const {useState} = React;

    function Login({onLogin}){
      const [name,setName] = useState("");
      const [email,setEmail] = useState("");
      const [password,setPassword] = useState("");
      const [role,setRole] = useState("student");
      const [error,setError] = useState("");

      function handleSubmit(e){
        e.preventDefault();
        if(!name.trim() || !email.trim() || !password.trim()){
          setError("‚ö† Please fill all fields.");
          return;
        }
        setError("");
        onLogin({name,email,role});
      }

      return (
        <div className="card-shell">
          <div className="login-layout">
            <section className="login-left">
              <div>
                <div className="badge">
                  <span className="badge-dot"></span>
                  React ‚Ä¢ Student Portal
                </div>
                <h1 className="title">
                  Welcome to <span>Campus Desk</span>
                </h1>
                <p className="subtitle">
                  One place to view your classes, attendance, GPA and fee status.
                </p>
                <div className="stat-row">
                  <div className="stat">
                    <span>Today&apos;s Classes</span>
                    <strong>3</strong>
                    <span style={{fontSize:"10px"}}>2 theory ‚Ä¢ 1 lab</span>
                  </div>
                  <div className="stat">
                    <span>Overall Attendance</span>
                    <strong>91%</strong>
                    <span style={{fontSize:"10px"}}>Safe above 75%</span>
                  </div>
                </div>
                <div className="chips">
                  <span className="chip-pill">‚ö° Fast overview</span>
                  <span className="chip-pill">üìä GPA tracker</span>
                  <span className="chip-pill">üí≥ Fee reminders</span>
                </div>
              </div>
              <div className="small-grid">
                <div className="mini">
                  <div className="mini-label">CGPA</div>
                  <div className="mini-value">8.6</div>
                  <div className="hint">Target 9.0</div>
                </div>
                <div className="mini">
                  <div className="mini-label">Credits</div>
                  <div className="mini-value">22 / 24</div>
                  <div className="hint">Current semester</div>
                </div>
                <div className="mini">
                  <div className="mini-label">Backlogs</div>
                  <div className="mini-value">0</div>
                  <div className="hint">Great going üéØ</div>
                </div>
              </div>
            </section>

            <form className="login-right" onSubmit={handleSubmit}>
              <div>
                <h2>Sign in</h2>
                <p>Use any demo details to open the dashboard.</p>
              </div>

              <div className="field-group">
                <label>Full Name</label>
                <input
                  className="input"
                  placeholder="e.g. Karthik Reddy"
                  value={name}
                  onChange={e=>setName(e.target.value)}
                />
              </div>

              <div className="field-group">
                <label>College Email</label>
                <input
                  className="input"
                  type="email"
                  placeholder="name@college.edu"
                  value={email}
                  onChange={e=>setEmail(e.target.value)}
                />
              </div>

              <div className="field-group">
                <label>Password</label>
                <input
                  className="input"
                  type="password"
                  placeholder="demo: 1234"
                  value={password}
                  onChange={e=>setPassword(e.target.value)}
                />
                <span className="hint">For lab exam you can mention: validation only checks non-empty.</span>
              </div>

              <div className="field-group">
                <label>Role</label>
                <select className="select" value={role} onChange={e=>setRole(e.target.value)}>
                  <option value="student">Student</option>
                  <option value="mentor">Mentor</option>
                  <option value="admin">Admin</option>
                </select>
              </div>

              <div className="row-between">
                <label><input type="checkbox" /> Remember me</label>
                <span className="small-link">Forgot password?</span>
              </div>

              {error && <div className="error">{error}</div>}

              <button className="btn" type="submit">Open Dashboard</button>

              <div className="row-between">
                <span className="hint">New user? Ask admin to create ID.</span>
                <span className="small-link">Need help?</span>
              </div>
            </form>
          </div>
        </div>
      );
    }

